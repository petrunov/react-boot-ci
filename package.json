{
    "name": "react-boot-ci",
    "version": "0.20.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "@types/d3": "^6.3.0",
        "@types/jest": "^26.0.15",
        "@types/node": "^12.0.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-router-dom": "^5.1.7",
        "d3": "^6.5.0",
        "eslint-plugin-react": "^7.22.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-helmet": "^6.1.0",
        "react-query": "^3.12.0",
        "react-router-dom": "^5.2.0",
        "react-scripts": "4.0.3",
        "typescript": "^4.1.2",
        "web-vitals": "^1.0.1"
    },
    "scripts": {
        "start": "react-app-rewired start",
        "build": "react-app-rewired build",
        "test": "react-app-rewired test --detectOpenHandles --bail  --passWithNoTests",
        "eject": "react-scripts eject",
        "lint": "eslint ./src/**/*",
        "lint:fix": "eslint --fix ./src/**/*",
        "lint:styles": "stylelint \"src/**/*.scss\" --syntax scss",
        "prettify": "prettier --write \"**/*.{js,json,css,scss,md,ts,tsx,html}\"",
        "postinstall": "husky install && chmod +x .husky/pre-commit"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/node-sass": "^4.11.1",
        "@types/react-helmet": "^6.1.0",
        "@typescript-eslint/eslint-plugin": "^4.4.1",
        "eslint": "^7.20.0",
        "eslint-config-airbnb-typescript": "^12.3.1",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jest": "^24.1.5",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react-hooks": "^4.0.8",
        "husky": "^5.1.1",
        "lint-staged": "^10.5.4",
        "node-sass": "^5.0.0",
        "prettier": "^2.2.1",
        "react-app-rewired": "^2.1.8",
        "stylelint": "^13.11.0",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-csstree-validator": "^1.9.0",
        "stylelint-scss": "^3.19.0"
    },
    "lint-staged": {
        "*.{ts,tsx,js,json,css,scss,md,html}": [
            "yarn prettify"
        ],
        "*.{tsx,ts}": [
            "yarn lint:fix",
            "yarn test --watchAll=false || exit 1"
        ],
        "*.{css,scss}": [
            "yarn lint:styles"
        ]
    }
}
